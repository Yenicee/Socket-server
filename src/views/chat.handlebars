</head>
<body>

    <div id="chat-box">
  {{#each messages}}
    <div class="message">
      <strong>{{this.sender}}:</strong> {{this.text}}
      <span class="timestamp">{{formatDate this.timestamp}}</span>
    </div>
  {{/each}}
</div>

</body>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>
</html>
